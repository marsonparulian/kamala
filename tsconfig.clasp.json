{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ES2020",
    "target": "es2020",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["google-apps-script"]
  },
  "include": [
    // "appscripts/**/*.ts"
    "appscripts/**/Code.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
